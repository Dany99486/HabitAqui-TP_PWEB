@model IEnumerable<Ficha1_P1_V1.Models.Empresa>

@{
    ViewData["Title"] = "Index";
}

<h1>Empresas</h1>
@if (User.Identity.IsAuthenticated && (User.IsInRole("Admin")))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Criar</a>
    </p>
    @if (Model.Count() == 0)
    {
        <h3 class="text-warning">Não existe nada a mostrar</h3>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Localidade)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Telefone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Localidade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.EmpresaId">Editar</a> |
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.EmpresaId">Detalhes</a> |
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.EmpresaId">Apagar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
    }
}
else
{
    <br />
    <p>Não tem acesso!!</p>
}