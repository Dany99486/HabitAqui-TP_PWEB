@model Ficha1_P1_V1.Models.Arrendamento

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Editar</h1>

<h4>Arrendamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="DataFim" class="control-label"></label>
                <input asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="PeriodoMinimo" class="control-label"></label>
                <input asp-for="PeriodoMinimo" class="form-control" />
                <span asp-validation-for="PeriodoMinimo" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="PeriodoMaximo" class="control-label"></label>
                <input asp-for="PeriodoMaximo" class="form-control" />
                <span asp-validation-for="PeriodoMaximo" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="habitacaoId" class="control-label"></label>
                <select asp-for="habitacaoId" class="form-control" asp-items="ViewBag.habitacaoId"></select>
                <span asp-validation-for="habitacaoId" class="text-danger"></span>
            </div><br />
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />

<div>
    <a class="btn btn-primary" asp-action="Index">Voltar</a>
</div>
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
