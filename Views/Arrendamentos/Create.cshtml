@model Ficha1_P1_V1.Models.Arrendamento

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Criar</h1>

<h4>Arrendamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="DataFim" class="control-label"></label>
                <input asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="PeriodoMinimo" class="control-label"></label>
                <input asp-for="PeriodoMinimo" class="form-control" />
                <span asp-validation-for="PeriodoMinimo" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="PeriodoMaximo" class="control-label"></label>
                <input asp-for="PeriodoMaximo" class="form-control" />
                <span asp-validation-for="PeriodoMaximo" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="habitacaoId" class="control-label"></label>
                <select asp-for="habitacaoId" class ="form-control" asp-items="ViewBag.habitacaoId"></select>
            </div><br />
	        <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />

<div>
    <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
</div>
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
