@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
		<form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-floating">
				<div>
					@if (Model.Input.Fotografia != null && Model.Input.Fotografia.Length > 0)
					{
						<img id="MinhaFoto"
							 src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.Fotografia))"
							 style="max-width: 200px; max-height: 200px;" />
					}
					else
					{
						<img id="MinhaFoto"
							 src="/img/user.png"
							 style="width: 30%; max-width: 200px; max-height: 200px;" />
					}
				</div>
				<div>
					<label asp-for="Input.FotoFile">Escolha uma imagem de perfil</label>
					<div>
						<img id="NovaImg" class="img-thumbnail" src="" />
					</div>
					<input type="file" accept=".png, .jpg, image/png, image/jpg"
						asp-for="Input.FotoFile"
						class="form-control"
						style="border:0px; important; padding:8px; padding-top:10px; padding-bottom:30px;" 
						onChange="document.getElementById('NovaImg').src = window.URL.createObjectURL(this.files[0])" />
						<span asp-validation-for="Input.FotoFile" class="text-danger"></span>
				</div>
			</div>
			<br />
	        <div class="form-floating">
		        <input asp-for="Username" class="form-control" disabled />
		        <label asp-for="Username" class="form-label"></label>
	        </div>
			<br />
	        <div class="form-floating">
		        <input asp-for="Input.PrimeiroNome" class="form-control" aria-required="true" />
		        <label asp-for="Input.PrimeiroNome"></label>
		        <span asp-validation-for="Input.PrimeiroNome" class="text-danger"></span>
	        </div>
			<br />
	        <div class="form-floating">
		        <input asp-for="Input.UltimoNome" class="form-control" aria-required="true" />
		        <label asp-for="Input.UltimoNome"></label>
		        <span asp-validation-for="Input.UltimoNome" class="text-danger"></span>
	        </div>
			<br />
	        <div class="form-floating">
		        <input asp-for="Input.DataNascimento" class="form-control" aria-required="true" />
		        <label asp-for="Input.DataNascimento"></label>
		        <span asp-validation-for="Input.DataNascimento" class="text-danger"></span>
	        </div>
			<br />
	        <div class="form-floating">
		        <input asp-for="Input.NIF" class="form-control" aria-required="true" />
		        <label asp-for="Input.NIF"></label>
		        <span asp-validation-for="Input.NIF" class="text-danger"></span>
	        </div>
			<br />
	        <div class="form-floating">
		        <input asp-for="Input.PhoneNumber" class="form-control" />
		        <label asp-for="Input.PhoneNumber" class="form-label"></label>
		        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
	        </div>
			<br />
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Guardar</button>
        </form>
    </div>
</div>
<br />
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
